extends ../default

block content
  include ../templates/nav
  div(class=['ui', 'container', 'grid', 'stackable'])
    div(class=['sixteen', 'wide', 'column'])
      h3(class=['ui','header','blue', 'dividing'])= 'Lista de productos'

      table(class=['ui','table','celled'] id ="tbl-productos")
        thead
          tr
            th= 'ID'
            th= 'Nombre'
            th= 'Precio'
            th= 'Stock'
            th= 'Fecha de creacion'
            th= 'Aciones'
        tbody
          each producto in productos
            tr
              td(id="id_producto")= producto.id_producto
              td= producto.nombre
              td= producto.precio
              td= producto.stock
              td= producto.fecha_creacion
              td
                a(class=['ui', 'button', 'icon'] href='#' data-tooltip='Eliminar' data-position='top center' data-inverted='' id="btn-eliminar")
                  i(class=['trash','icon'])
                a(class=['ui', 'button', 'icon'] href='#' data-tooltip='Modificar' data-position='top center' data-inverted='')
                  i(class=['edit','icon'])

  script(src='/javascripts/productos.js')
